{{#if alumnos}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr class="text-center" >
            <th>Num.</th>
            <th>Nombre</th>
            <th>Paterno</th>
            <th>Materno</th>
            <th>Nacimiento</th>
            <th>Sexo</th>
            <th>Celular</th>
            <th>Direccion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody> 
        {{#each alumnos}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{paterno}}</td>
            <td>{{materno}}</td>
            <td>{{fechaNacimiento}}</td>
            <td>{{sexo}}</td>
            <td>{{celular}}</td>
            <td>{{direccion}}</td>

            <td>
                {{#if opcion}}
                <a href="/statusAlumnos/{{_id}}">
                <button class="btn btn-warning">No disponible</button>
                </a>
                {{else}}
                <a href="/statusAlumnos/{{_id}}">
                <button class="btn btn-success">Disponible</button>
                </a>
                {{/if}}
                
                <a href="/actualizarAlumnos/{{_id}}">
                <button class="btn btn-primary">Actualizar</button></a>
                <a href="/eliminarAlumnos/{{_id}}">
                <button class="btn btn-danger">Eliminar</button>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex aling-items-center justify-content-center">
    <div class="text-center">
        <h3>No hay datos</h3>
        <img src="/icons/cara.png" class="w-75">
    </div>
</div>
{{/if}}