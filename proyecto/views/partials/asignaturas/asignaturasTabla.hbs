{{#if asignaturas}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr class="text-center">
            <th>Num.</th>
            <th>Nombre</th>
            <th>Creditos</th>
            <th>Horas</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each asignaturas}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{creditos}}</td>
            <td>{{horas}}</td>

            <td>
                {{#if opcion}}
                <a href="/statusAsignaturas/{{_id}}">
                <button class="btn btn-warning">No disponible</button>
                </a>
                {{else}}
                <a href="/statusAsignaturas/{{_id}}">
                <button class="btn btn-success">Disponible</button>
                </a>
                {{/if}}
                
                <a href="/actualizarAsignaturas/{{_id}}">
                <button class="btn btn-primary">Actualizar</button></a>
                <a href="/eliminarAsignaturas/{{_id}}">
                <button class="btn btn-danger">Eliminar</button>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex aling-items-center justify-content-center">
    <div class="text-center">
        <h3>No hay datos</h3>
        <a href=""><img src="/icons/cara.png" class="w-75"></a>
    </div>
</div>
{{/if}}